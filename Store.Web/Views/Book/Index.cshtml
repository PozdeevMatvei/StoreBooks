@model BookModel

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<p><strong>@Model.Author</strong></p>
<p>@Model.Description</p>
<p>Цена: <strong>@Model.Price</strong></p>
<form method="post" action="@Url.Action(nameof(OrderController.AddOrderItem), "Order")" method="post">
    <input type="hidden" name="bookId" value="@Model.BookId"/>
    @if(Model.IsBookCart)
    {
        <button disabled>Товар в корзине</button>
    }
    else
    {
        <button type="submit">В корзину</button>
    }
</form>