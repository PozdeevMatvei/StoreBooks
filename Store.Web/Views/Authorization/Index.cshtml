@using Store.Web.App.models

@model AuthorizationModel

@{
    ViewData["Title"] = "авторизация";
}

<div>
    <h3>Авторизация</h3>
    <form asp-controller="@nameof(AuthorizationController)"
          asp-action="@nameof(AuthorizationController.Index)"
          method="post"
    >
        <label asp-for="@Model.Email">Email</label>
        <input asp-for="@Model.Email" value="@Model.Email"/>

        <label asp-for="@Model.Password">Пароль</label>
        <input asp-for="@Model.Password" type="password"/>

        <button type="submit">Войти</button>
    </form>
</div>