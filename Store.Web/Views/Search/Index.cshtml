@model IReadOnlyCollection<BookModel>

@{
    ViewData["Title"] = "List books";
}


@{
    if(Model.Count > 0)
    {
    <ul>
        @foreach (var bookModel in Model)
        {
            <li>
                <a asp-action="@nameof(BookController.Index)" asp-controller="Book" asp-route-bookId="@bookModel.BookId">@bookModel.Title</a>
            </li>
        }
    </ul>
    }
    else
    {
        <h2>Книга не найдена.</h2>
    }
}
    

