<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width", initial-scale="1"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/RemoveButtonsInputNumber.css" />
    <link rel="stylesheet" type="text/css" media="screen,projection" href="~/css/StyleSheet.css" />
</head>
<body>
    <div class="nav-bar">
        <div class="nav-bar top" >
            <form  method="get" asp-controller="search" asp-action="Index">
                <input name="query" style="width: 50%" placeholder="автор или название" />
                <button type="submit">Искать</button>
            </form>
            <span>
                @{              
                    if(Context.Session.TryGetCart(out Cart? cart) && cart?.TotalCount > 0)
                    {
                        <a href="@Url.Action("Index", "Order")">Товаров: @cart.TotalCount на сумму: @cart.TotalPrice</a>
                    }
                    else
                    {
                        @:Корзина пуста
                    }
                }
            </span>
            <nav id="navigation">
                <a id="navcontent" asp-controller="Home" asp-action="Index">Home</a>
            </nav>
        </div> 
      
        <div class="nav-bar left">
            <p>ads</p>
        </div>
        <div class="nav-bar body">
            @RenderBody()
        </div>
    </div>

    <script type="text/javascript" src="js/bootstrap.bundle.min.js"></script>
</body>
</html>
