<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" media="screen,projection" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" type="text/css" href="~/css/RemoveButtonsInputNumber.css"/>
</head>
<body>
    <div id="header" >
        <form method="get" asp-controller="search" asp-action="Index">
            <input name="query" id="searchInput" style="width: 50%" placeholder="автор или название" />
            <button id="searchInput" type="submit">Искать</button>
        </form>
        <span>
            @{              
                if(Context.Session.TryGetCart(out Cart? cart) && cart?.TotalCount > 0)
                {
                    <a href="@Url.Action("Index", "Order")">Товаров: @cart.TotalCount на сумму: @cart.TotalPrice</a>
                }
                else
                {
                    @:Корзина пуста
                }
            }
        </span>
    </div> 
       
    <nav id="navigation">
        <a id="navcontent" asp-controller="Home" asp-action="Index">Home</a>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
