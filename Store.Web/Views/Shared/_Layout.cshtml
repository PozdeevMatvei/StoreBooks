<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width", initial-scale="1"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/RemoveButtonsInputNumber.css" />
    <link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
</head>
<body>
    <div class="nav-bar">
        <div class="nav-bar-top" >
            <div class="nav-panel">
                <form  class="search" method="get" asp-controller="search" asp-action="Index">
                    <label class="search-label">
                        <input class="search-input" name="query" placeholder="автор или название" />                        
                        <button type="submit">Искать</button>
                    </label>
                </form>
               
                <a class="cart" href="@Url.Action("Index", "Order")">
                    <div class="cart-count">
                        @{
                            if(Context.Session.TryGetCart(out Cart? cart))
                            {
                                <span class="count">@cart!.TotalCount</span>
                            }
                            else
                            {
                                <span class="count">0</span>
                            }
                        }
                            
                    </div>
                </a>
            </div>
            <div class="header-links">               
                <nav>
                    <ul class="header-nav-list">
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>                       
                    </ul>
                    
                </nav>
            </div>
        </div> 
      
        @*<div class="nav-bar left">
            <p>ads</p>
        </div>*@
        <div class="nav-bar-body">
            @RenderBody()
        </div>
    </div>

    <script type="text/javascript" src="js/bootstrap.bundle.min.js"></script>
</body>
</html>
