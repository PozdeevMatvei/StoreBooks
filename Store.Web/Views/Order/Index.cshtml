@model OrderModel

@{
    ViewData["Title"] = "Список товаров в корзине";
}
<table>
    <thead>
        <tr>
            <th>№</th>
            <th>Название</th>
            <th>Автор</th>
            <th>Количество</th>
            <th>Цена</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.OrderItems)
        {
            <tr>
                <td>@item.BookId</td>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>
                    <a type="button" asp-action="UpdateOrderItem" asp-controller="Order" asp-route-bookId="@item.BookId" asp-route-count="-1">-</a>
                    @item.Count
                    <a type="button" asp-action="UpdateOrderItem" asp-controller="Order" asp-route-bookId="@item.BookId">+</a>
                </td>
                <td>@item.Price</td>
                <td>
                    <form asp-action="RemoveOrderItem" asp-controller="Order" asp-route-bookId="@item.BookId"> 
                        <button type="submit">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Итого</td>
            <td>@Model.TotalCount</td>
            <td>@Model.TotalPrice</td>
        </tr>
    </tfoot>
</table>
