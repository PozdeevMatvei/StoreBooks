@model DeliveryModel

@{
    ViewData["Title"] = "Способ оплаты";
}

<h1>Способ оплаты</h1>
<form action="@Url.Action(nameof(OrderController.StartPayment))" method="post">
    <input type="hidden" name="orderId" value="@Model.OrderId"/>
    <div>
        <label for="uniqueCode">Способ оплаты</label>
        <select name="uniqueCode">
            @foreach(var methodDelivery in Model.Methods!)
            {
                <option value="@methodDelivery.Key">@methodDelivery.Value</option>
            }
        </select>
    </div>
    <button type="submit">Далее</button>
</form>