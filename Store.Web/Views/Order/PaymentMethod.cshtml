@model IReadOnlyDictionary<string,string> 

@{
    ViewData["Title"] = "Способ оплаты";
}

<div class="column-container">
    <div class="container-label">
        <h3>Способ оплаты</h3>
    </div>
    <div class="container-content">
        <form action="@Url.Action(nameof(OrderController.StartPayment))" method="post">
            <div class="container-content-form">
                <label for="serviceName">Способ оплаты</label>
                <select name="serviceName">
                    @foreach (var methodDelivery in Model)
                    {
                        <option value="@methodDelivery.Key">@methodDelivery.Value</option>
                    }
                </select>          
            </div>    
            <button type="submit">Далее</button>
        </form>
    </div>
</div>

